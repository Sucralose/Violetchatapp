<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:background="@drawable/background_input"
    android:backgroundTint="@color/light_grey"
    android:padding="@dimen/_2sdp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/layoutgroup_groupImage"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/background_image"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/circle" />


    <TextView
        android:id="@+id/layoutgroup_groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_toEndOf="@id/layoutgroup_groupImage"
        android:text="Group Name"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/layoutgroup_lastMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:padding="@dimen/_5sdp"
        android:text="XXX-XXX-XXX-XXX" />

    <TextView
        android:id="@+id/layoutgroup_lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutgroup_groupName"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_toEndOf="@id/layoutgroup_groupImage"
        android:maxLength="30"
        android:text="Last Message"
        android:textSize="@dimen/_12ssp" />


</RelativeLayout>
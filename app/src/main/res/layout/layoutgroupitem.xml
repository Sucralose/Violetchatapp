<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_7sdp"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        app:riv_border_color="@color/primary"
        app:riv_corner_radius="@dimen/_1sdp"
        android:background="@drawable/background_image"
        android:id="@+id/layoutgroup_groupImage"/>


    <TextView
        android:id="@+id/layoutgroup_groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toRightOf="@id/layoutgroup_groupImage"
        android:text="Group Name"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/layoutgroup_lastMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX-XXX-XXX-XXX"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_5sdp"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Last Message"
        android:layout_marginTop="@dimen/_2sdp"
        android:textSize="@dimen/_12ssp"
        android:textStyle="italic"
        android:id="@+id/layoutgroup_lastMessage"
        android:layout_below="@id/layoutgroup_groupName"
        android:layout_toRightOf="@id/layoutgroup_groupImage"
        android:layout_marginLeft="@dimen/_6sdp"/>


</RelativeLayout>